// Prisma schema for Maigie backend

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Base Schema ---

enum Tier {
  FREE
  PREMIUM_MONTHLY
  PREMIUM_YEARLY
}

// User model (from 17-backend-infrastructure, kept for Auth/Subscription details)
model User {
  id             String   @id @default(uuid())
  email          String   @unique
  passwordHash   String?
  name           String?
  provider       String?  // for oauth (google/github)
  providerId     String?
  tier           Tier     @default(FREE)
  timezone       String?
  preferences    Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("users")
}

// Course model (from feature/api-backend-foundation)
model Course {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("courses")
}

// Goal model (from feature/api-backend-foundation)
model Goal {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("goals")
}